# SMS-POWERBOMB Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
APP_NAME=SMS-POWERBOMB
APP_VERSION=10.0.0
DEBUG=False
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (Use PostgreSQL in production)
# For SQLite (development/testing):
DATABASE_URL=sqlite+aiosqlite:///./data/smsbomb.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/smsbomb

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Settings - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings - Update with your production domains
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# SMS API Settings
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# Campaign Settings
MAX_TARGETS_PER_CAMPAIGN=1000
MAX_WAVES=100
MIN_DELAY_SECONDS=1
MAX_DELAY_SECONDS=60

# Security Settings (Production)
SECURE_COOKIES=True
HTTPS_ONLY=True
HSTS_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=False